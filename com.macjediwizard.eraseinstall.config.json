    "MAX_ABORTS": 3,
    "ABORT_COUNTDOWN": 15,
    "ABORT_HEIGHT": 250,
    "ABORT_WIDTH": 750,
    "ABORT_ICON": "SF=exclamationmark.triangle"
  }
