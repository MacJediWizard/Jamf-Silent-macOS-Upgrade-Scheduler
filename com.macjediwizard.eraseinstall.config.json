    "DIALOG_POSITION": "topright",
    "DIALOG_HEIGHT": 250,
    "DIALOG_WIDTH": 650,
    "DIALOG_MESSAGEFONT": "size=16",
    "DIALOG_INSTALL_NOW_TEXT": "Install Now",
    "DIALOG_SCHEDULE_TODAY_TEXT": "Schedule Today",
    "DIALOG_DEFER_TEXT": "Defer 24 Hours",
    "DIALOG_DEFER_TEXT_TEST_MODE": "Defer 5 Minutes   (TEST MODE)",
    "DIALOG_CONFIRM_TEXT": "Confirm"
  },

  "preinstall_dialog": {
    "PREINSTALL_TITLE": "macOS Upgrade Starting",
    "PREINSTALL_TITLE_TEST_MODE": "macOS Upgrade Starting\n                (TEST MODE)",
    "PREINSTALL_MESSAGE": "Your scheduled macOS upgrade is ready to begin.\n\nThe upgrade will start automatically in 60 seconds, or click Continue to begin now.",
    "PREINSTALL_PROGRESS_TEXT_MESSAGE": "Installation will begin in 60 seconds...",
    "PREINSTALL_CONTINUE_TEXT": "Continue Now",
    "PREINSTALL_COUNTDOWN": 60,
    "PREINSTALL_HEIGHT": 350,
    "PREINSTALL_WIDTH": 650,
    "PREINSTALL_DIALOG_MESSAGEFONT": "size=16"
  },

  "scheduled_dialog": {
    "SCHEDULED_TITLE": "macOS Upgrade Scheduled",
    "SCHEDULED_TITLE_TEST_MODE": "macOS Upgrade Scheduled\n                (TEST MODE)",
    "SCHEDULED_MESSAGE": "Your scheduled macOS upgrade is ready to begin.\n\nThe upgrade will start automatically in 60 seconds,\n\n or click Continue to begin now.",
    "SCHEDULED_PROGRESS_TEXT_MESSAGE": "Installation will begin in 60 seconds.....",
    "SCHEDULED_CONTINUE_TEXT": "Continue Now",
    "SCHEDULED_COUNTDOWN": 60,
    "SCHEDULED_HEIGHT": 250,
    "SCHEDULED_WIDTH": 650,
    "SCHEDULED_CONTINUE_HEIGHT": 350,
    "SCHEDULED_CONTINUE_WIDTH": 750,
    "SCHEDULED_DIALOG_MESSAGEFONT": "size=16"
  },

  "error_dialog": {
    "ERROR_DIALOG_TITLE": "Invalid Time",
    "ERROR_DIALOG_MESSAGE": "The selected time is invalid.\nPlease select a valid time (00:00-23:59).",
