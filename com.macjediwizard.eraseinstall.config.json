    "NO_FS": true,
    "CHECK_POWER": true,
    "POWER_WAIT_LIMIT": 300,
    "MIN_DRIVE_SPACE": 50,
    "CLEANUP_AFTER_USE": true
  },

  "auth_notice": {
    "SHOW_AUTH_NOTICE": true,
