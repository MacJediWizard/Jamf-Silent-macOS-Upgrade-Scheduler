{
  "_comment": "macOS Upgrade Wrapper Configuration - Deploy via Jamf Configuration Profile",
  "_version": "2.0.0",
  "_description": "All configurable settings for erase-install-defer-wrapper.sh",

  "core_settings": {
    "SCRIPT_VERSION": "2.0.0",
    "INSTALLER_OS": "15",
    "MAX_DEFERS": 3,
    "FORCE_TIMEOUT_SECONDS": 259200
  },

  "file_paths": {
    "PLIST": "/Library/Preferences/com.macjediwizard.eraseinstall.plist",
    "SCRIPT_PATH": "/Library/Management/erase-install/erase-install.sh",
    "DIALOG_BIN": "/Library/Management/erase-install/Dialog.app/Contents/MacOS/Dialog",
    "DIALOG_BIN_FALLBACK": "/usr/local/bin/dialog",
    "LAUNCHDAEMON_LABEL": "com.macjediwizard.eraseinstall.schedule",
    "LAUNCHDAEMON_PATH": "/Library/LaunchDaemons/com.macjediwizard.eraseinstall.schedule.plist"
  },

  "feature_toggles": {
    "TEST_MODE": false,
    "PREVENT_ALL_REBOOTS": false,
    "SKIP_OS_VERSION_CHECK": false,
    "AUTO_INSTALL_DEPENDENCIES": true,
    "DEBUG_MODE": false
  },

  "logging": {
    "MAX_LOG_SIZE_MB": 10,
    "MAX_LOG_FILES": 5
  },

  "branding": {
    "ENABLE_BRANDING": false,
    "COMPANY_NAME": "Your Company Name",
    "COMPANY_LOGO": "/Library/Management/branding/logo.png",
    "SUPPORT_CONTACT": "IT Support: support@company.com or ext. 1234",
    "SHOW_COMPANY_NAME_IN_TITLE": true,
    "SHOW_SUPPORT_IN_MESSAGE": true,
    "USE_COMPANY_LOGO": true,
    "LOGO_WIDTH": 128,
    "LOGO_HEIGHT": 128
  },

